def input_matrix(prompt):
#Ermöglicht die Eingabe einer Matrix
    print(prompt)
    matrix = []
    while True:
        line = input().strip()
        if line == "":
            break
        row = list(map(int, line.split()))
        matrix.append(row)
    return matrix

def input_vector(prompt):
#Ermöglicht die Eingabe eines Vektors
    print(prompt)
    vector = list(map(int, input().strip().split()))
    return vector
